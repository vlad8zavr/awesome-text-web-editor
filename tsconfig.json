{
    "compilerOptions": {
      "target": "es5",
      "downlevelIteration": true,
      "module": "esnext",
      "lib": [
        "es6",
        "dom"
      ],
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "allowJs": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true
    },
    "include": [
      "src", "test/setupTests.js"
    ]
}